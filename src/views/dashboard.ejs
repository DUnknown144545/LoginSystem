<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <nav>
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    <a href="/login">Login</a>
  </nav>
  <div class="container">
    <div class="card">
      <h1>Dashboard</h1>
      <p class="center">Welcome, <strong><%= user && user.username %></strong>.</p>

      <form class="center" method="POST" action="/logout">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit">Logout</button>
      </form>
    </div>
  </div>
</body>
</html>
